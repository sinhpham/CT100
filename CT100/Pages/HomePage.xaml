      <DataTemplate>
        <local:StyledTextCell Text="{Binding Name}" Accessory="DisclosureIndicator"/>
      </DataTemplate>
    </ListView.ItemTemplate>
		</ListView>
	</ContentPage.Content>
</ContentPage>